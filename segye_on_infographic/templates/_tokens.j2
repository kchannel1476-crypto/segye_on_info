{# ============================
   SEGYE.ON Infographic Tokens v1
   - Common canvas/grid/frame rules
   ============================ #}

{% set W = canvas.w %}
{% set H = canvas.h %}
{% set m = canvas.margin %}

{% set safe_w = W - (m*2) %}
{% set cols = 12 %}
{% set g = 24 %}
{% set colw = (safe_w - g*(cols-1)) / cols %}

{% set x0 = m %}
{% set x1 = W - m %}

{# Fixed frame #}
{% set header_line_y = m + 160 %}
{% set body_top = header_line_y + 70 %}
{% set footer_line_y = H - m - 90 %}
{% set sources_y = H - m - 45 %}

{# Column start x for column index c (0-based) #}
{% macro cx(c) -%}
  {{ x0 + (c * colw) + (c * g) }}
{%- endmacro %}

{# Column width for n columns #}
{% macro cw(n) -%}
  {{ (n * colw) + ((n-1) * g) }}
{%- endmacro %}

